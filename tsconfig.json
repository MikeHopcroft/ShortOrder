{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "declaration": true,
    "inlineSources": true,
    "lib": ["es2017"],
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "samples/*.ts",
    "samples/**/*.ts",
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ]
}
